---
import Base from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import { posts } from '../data/posts';
---
<Base title="Vulpo â€” Blog">
  <Header slot="header" />
  <section class="blog container">
    <h1 class="blog__title">Blog</h1>
    <ul class="blog__list">
      {posts.map(post => (
        <li class="blog__item" key={post.id}>
          <a class="blog__link" href={`/blog/${post.id}.html`}>
            <h2 class="blog__post-title">{post.title}</h2>
            {post.excerpt && <p class="blog__excerpt">{post.excerpt}</p>}
          </a>
        </li>
      ))}
    </ul>
  </section>
</Base>
